<Window x:Class="Avanzado.Ventana2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avanzado"
        mc:Ignorable="d"
        Title="Ventana2" Height="450" Width="800">
    <StackPanel>
        <Label Content="Nombre" Margin="6"/>
        <TextBox Name="txtNombre" Width="200" Margin="6" HorizontalAlignment="Left" ></TextBox>
        <Label Content="Edad" Margin="6"/>
        <TextBox Name="txtEdad" Width="200" Margin="6" HorizontalAlignment="Left" ></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnAceptar" Content="Aceptar" Click="AceptarClick" Width="80" Margin="6"/>
            <Button Name="btnCancelar" Content="Cancelar" Click="Cancelar" Width="80" Margin="6"/>
        </StackPanel>
    </StackPanel>
</Window>
