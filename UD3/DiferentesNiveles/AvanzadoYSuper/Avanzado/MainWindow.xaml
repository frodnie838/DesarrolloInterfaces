<Window x:Class="Avanzado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avanzado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <ListBox Name="lstUsuarios" Height="180"/>
        <DataGrid Height="180" Name="dgUsuarios" AutoGenerateColumns="True"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button Name="btnAdd" Click="AgregarUsu" Content="Agregar usuario" Margin="10" Width="100"/>
            <Button Name="btnSalir" Click="Salir" Content="Salir" Margin="10" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
