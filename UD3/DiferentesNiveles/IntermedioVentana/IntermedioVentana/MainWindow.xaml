<Window x:Class="IntermedioVentana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntermedioVentana"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="200">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Precio original" Margin="6" HorizontalAlignment="Center"/>
        <TextBox Name="txtPrecio" Width="150"  HorizontalAlignment="Left" Margin="6" TextAlignment="Center"/>
        <Label Content="Porcentaje de descuento" Margin="6" HorizontalAlignment="Center"/>
        <ComboBox Width="150" Height="25" Margin="6" SelectionChanged="SelecCombo" Name="MiCombo" HorizontalAlignment="Center">
            <ComboBoxItem Content="5%" Tag="5"/>
            <ComboBoxItem Content="15%" Tag="15"/>
            <ComboBoxItem Content="50%" Tag="50"/>
        </ComboBox>
        <Button Name="btnEnviar" Click="Enviar" Content="Enviar" Width="80" Margin="6" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
