<Window x:Class="simulacro.ModificarActividad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simulacro"
        mc:Ignorable="d"
        Title="ModificarActividad" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Width="80" Height="80" Grid.Column="0" Grid.Row="0" Click="futbol">
            <StackPanel>
                <Image Source="/image/huella.png" Width="50"/>
                <TextBlock Text="Futbol" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Width="80" Height="80" Grid.Column="0" Grid.Row="1" Click="atle">
            <StackPanel>
                <Image Source="/image/huella.png" Width="50"/>
                <TextBlock Text="Atletismo" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Width="80" Height="80" Grid.Column="0" Grid.Row="2" Click="nata">
            <StackPanel>
                <Image Source="/image/huella.png" Width="50"/>
                <TextBlock Text="Natacion" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Width="80" Height="80" Grid.Column="1" Grid.Row="0" Click="puen">
            <StackPanel>
                <Image Source="/image/huella.png" Width="50"/>
                <TextBlock Text="Puenting" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Width="80" Height="80" Grid.Column="1" Grid.Row="1" Click="balonc">
            <StackPanel>
                <Image Source="/image/huella.png" Width="50"/>
                <TextBlock Text="Baloncesto" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Width="80" Height="80" Grid.Column="1" Grid.Row="2" Click="tenis">
            <StackPanel>
                <Image Source="/image/huella.png" Width="50"/>
                <TextBlock Text="Tenis" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        
    </Grid>
</Window>
