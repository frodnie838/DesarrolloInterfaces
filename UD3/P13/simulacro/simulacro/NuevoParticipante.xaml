<Window x:Class="simulacro.NuevoParticipante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simulacro"
        mc:Ignorable="d"
        Title="NuevoParticipante" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nuevo Participante" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="24" />
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Content="Nombre:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Width="200" Margin="10,0"  VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <Label Content="DNI:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Width="200" Margin="10,0"  VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3">
            <Label Content="Actividad:" FontWeight="Bold" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Width="200" VerticalAlignment="Center">
                <ComboBoxItem Content="Futbol"/>
                <ComboBoxItem Content="Atletismo"/>
                <ComboBoxItem Content="Natacion"/>
                <ComboBoxItem Content="Puenting"/>
                <ComboBoxItem Content="Baloncesto"/>
                <ComboBoxItem Content="Tenis"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4">
            <Label Content="Edad:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Width="200" Margin="10,0"  VerticalAlignment="Center"/>
        </StackPanel>

        <Button Name="btnAdd" Content="Añadir" Width="80" Height="25"  Grid.Row="5" Click="AddParticipante"/>
    </Grid>
</Window>
