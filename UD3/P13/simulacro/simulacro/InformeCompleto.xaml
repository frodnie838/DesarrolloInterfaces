<Window x:Class="simulacro.InformeCompleto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simulacro"
        mc:Ignorable="d"
        Title="InformeCompleto" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Lista}" AutoGenerateColumns="False" Name="dgLista">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding idusers}" Width="80"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding name}" Width="150"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding surname}" Width="150"/>
                <DataGridTextColumn Header="Edad" Binding="{Binding age}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>        
    </Grid>
</Window>
