<Window x:Class="Ej3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="#888"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="TituloSeccion">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
    </Window.Resources>

    <ScrollViewer>
        <StackPanel>
            <Border>
                <StackPanel>
                    <TextBlock Text="Datos Personales" Style="{StaticResource TituloSeccion}"/>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Nombre:"/>
                        <TextBox x:Name="TxtNombre" Width="300"/>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Fecha de Nacimiento:"/>
                        <DatePicker x:Name="DpNacimiento" Width="200"/>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Estado Civil:"/>
                        <ComboBox x:Name="CbEstadoCivil" Width="200">
                            <ComboBoxItem Content="Soltero"/>
                            <ComboBoxItem Content="Casado"/>
                            <ComboBoxItem Content="Divorciado"/>
                            <ComboBoxItem Content="Viudo"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Género:"/>
                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <RadioButton x:Name="RbHombre" Content="Hombre" Margin="0 0 20 0"/>
                            <RadioButton x:Name="RbMujer" Content="Mujer" Margin="0 0 20 0"/>
                            <RadioButton x:Name="RbOtro" Content="Otro"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>
            <Border>
                <StackPanel>
                    <TextBlock Text="Datos Laborales" Style="{StaticResource TituloSeccion}"/>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Profesión:"/>
                        <TextBox x:Name="TxtProfesion" Width="300"/>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Años de experiencia:"/>
                        <TextBox x:Name="TxtExperiencia" Width="100"/>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Habilidades:"/>
                        <StackPanel>
                            <CheckBox Content="Programación"/>
                            <CheckBox Content="Diseño Gráfico"/>
                            <CheckBox Content="Gestión de Proyectos"/>
                            <CheckBox Content="Idiomas"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Tipo de Contrato:"/>
                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <RadioButton Content="Tiempo Completo" Margin="0 0 20 0"/>
                            <RadioButton Content="Medio Tiempo"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>
            <Border>
                <StackPanel>
                    <TextBlock Text="Datos de Contacto" Style="{StaticResource TituloSeccion}"/>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Teléfono:"/>
                        <TextBox x:Name="TxtTelefono" Width="200"/>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Correo electrónico:"/>
                        <TextBox x:Name="TxtCorreo" Width="300"/>
                    </StackPanel>

                    <StackPanel Margin="0 10">
                        <TextBlock Text="Dirección:"/>
                        <TextBox x:Name="TxtDireccion" Width="400" Height="60" TextWrapping="Wrap"/>
                    </StackPanel>

                </StackPanel>
            </Border>
            <Button Content="Guardar Datos"
                    Width="180" Height="40" Margin="20"
                    Background="#4c84ff"
                    Foreground="White" FontWeight="Bold"
                    Click="Guardar_Click"/>

        </StackPanel>
    </ScrollViewer>
</Window>
