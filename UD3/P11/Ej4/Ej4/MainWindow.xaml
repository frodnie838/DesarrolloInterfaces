<Window x:Class="Ej4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <TabControl x:Name="TabControlMain" Grid.Row="0" Margin="10">
                <TabItem Header="General">
                    <Grid Background="WhiteSmoke"/>
                </TabItem>
                <TabItem Header="Seguridad">
                    <Grid Background="WhiteSmoke"/>
                </TabItem>
                <TabItem Header="Detalles">
                    <Grid Background="WhiteSmoke"/>
                </TabItem>
            </TabControl>


            <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Left" Margin="10">

                <Button Content="Anterior" Width="80" Margin="3"
                    Click="Anterior_Click"/>

                <Button Content="Siguiente" Width="80" Margin="3"
                    Click="Siguiente_Click"/>

                <Button Content="Seleccionado" Width="100" Margin="3"
                    Click="Seleccionado_Click"/>

            </StackPanel>

        </Grid>

</Window>
