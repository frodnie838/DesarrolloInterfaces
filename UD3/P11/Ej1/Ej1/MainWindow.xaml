<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Border Background="LightBlue" BorderBrush="Black" BorderThickness="3" Name="BorderT">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">                
                <Button Width="100" Margin="10" Height="25" Name="btn1" Click="B1" BorderBrush="Red" BorderThickness="3" Background="Beige">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/enviar.png" Stretch="Uniform"/>
                        <TextBlock Text="Border 1"/>
                    </StackPanel>
                </Button>
                <Button Width="100" Margin="10" Height="25" Name="btn2" Click="B2" BorderBrush="Green" BorderThickness="3">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/enviar.png" Stretch="Uniform"/>
                        <TextBlock Text="Border 2"/>
                    </StackPanel>
                </Button>
                <Button Width="100" Margin="10" Height="25" Name="btn3" Click="B3" BorderBrush="Yellow" BorderThickness="3">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/enviar.png" Stretch="Uniform"/>
                        <TextBlock Text="Border 3"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>        
    </Grid>
</Window>
