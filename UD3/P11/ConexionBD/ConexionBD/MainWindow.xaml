<Window x:Class="ConexionBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConexionBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Click="CargarDatos" Width="100" Content="Cargar datos BD"/>
            <TextBox Name="lbLista"/>
            <DataGrid x:Name="dgLista" ItemsSource="{Binding ListaUsuarios}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idusers}" Width="80"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding name}" Width="150"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding surname}" Width="150"/>
                    <DataGridTextColumn Header="Edad" Binding="{Binding age}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
