<Window x:Class="Ej4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Margin="4">Botón1 (0,0)</Button>
        <Button Grid.Row="0" Grid.Column="1" Margin="4">Botón2 (0,1)</Button>
        <Button Grid.Row="1" Grid.Column="0" Margin="4">Botón3 (1,0)</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="4">Botón4 (1,1)</Button>
        
    </Grid>
</Window>
