<Window x:Class="EJ1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EJ1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Left" Margin="10" FontWeight="Bold" FontSize="20">Formulario de Contacto</TextBlock>
            <Label Margin="10,10,0,0" >Nombre</Label>
            <TextBox Name="txtNombre" Width="400" HorizontalAlignment="Left" Margin="10,0,0,0" ></TextBox>
            <Label Margin="10,0,0,0">Correo electrónico</Label>
            <TextBox Name="txtEmail" Width="400" HorizontalAlignment="Left" Margin="10,0,0,0"></TextBox>
            <Button Name="btnEnviar" Click="Enviar" HorizontalAlignment="Left" Margin="10,20" Width="80">Enviar</Button>
            <StackPanel Orientation="Horizontal">
                <Button Name="btnLimpiar" Click="Limpiar" Margin="10,20" Width="80">Limpiar</Button>
                <Button Name="btnCancelar" Click="Cancelar" Margin="10,20" Width="80">Cancelar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
