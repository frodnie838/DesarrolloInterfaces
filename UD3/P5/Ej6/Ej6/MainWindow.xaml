<Window x:Class="Ej6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Background="Aqua" FontWeight="Bold">Boton1</Button>
        <Button Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Background="Yellow" FontWeight="Bold">Boton2</Button>
        <Button Grid.Column="0" Grid.Row="1" Background="red" FontWeight="Bold">Boton3</Button>
        <Button Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="Purple" FontWeight="Bold">Boton4</Button>
        <Button Grid.Column="0" Grid.Row="2" Background="Green" FontWeight="Bold">Boton5</Button>

    </Grid>
</Window>
