<Window x:Class="Ej2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <WrapPanel>
                <TextBlock Foreground="Green">Primero</TextBlock>
                <TextBlock Foreground="Blue">Segundo</TextBlock>
                <TextBlock>Tercero</TextBlock>
            </WrapPanel>
        </Button>

    </Grid>
</Window>
