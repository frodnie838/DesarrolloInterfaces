<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="_Nombre" Target="{Binding ElementName=txtNombre}"/>
            <TextBox Name="txtNombre" Width="300" HorizontalAlignment="Left" Margin="6"/>
            <Label Content="_Apellido" Target="{Binding ElementName=txtApellido}"/>
            <TextBox Name="txtApellido" Width="300" HorizontalAlignment="Left" Margin="6"/>
            <Label Content="_Email" Target="{Binding ElementName=btnEmail}"/>
            <TextBox Name="txtEmail" Width="300" HorizontalAlignment="Left" Margin="6" IsReadOnly="True"/>
            <Button Name="btnEmail" Content="Rellenar email" Width="80" Click="Email" HorizontalAlignment="Left" Margin="6"/>
        </StackPanel>
    </Grid>
</Window>
