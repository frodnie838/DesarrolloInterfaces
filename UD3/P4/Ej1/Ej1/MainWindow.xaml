<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Grid>
        <StackPanel>
            <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center">Formulario</Label>
            <Label Margin="20,0,0,0">Nombre</Label>
            <TextBox Name="tbNombre" Width="400" HorizontalAlignment="Left" Margin="20,0,0,0"></TextBox>
            <Label Margin="20,0,0,0">Edad</Label>
            <TextBox Name="tbEdad" Width="400" HorizontalAlignment="Left" Margin="20,0,0,0"></TextBox>
            <Button ToolTip="Haz clic aquí para enviar los datos…" Name="btnEnviar" Margin="20" Width="80" HorizontalAlignment="Left">Enviar datos</Button>
        </StackPanel>
    </Grid>
</Window>
