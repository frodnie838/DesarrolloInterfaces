<Window x:Class="Ej4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej4"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--
            Atajos:
        	Alt+N → Nombre
	        Alt+A → Apellido
	        Alt+D → Direccion
   	        Alt+P → Codigo Postal
        -->       
        <StackPanel Grid.Column="0">
            <Label Content="_Nombre" Margin="10,0,0,0" Target="{Binding ElementName=txtNombre}"/>
            <TextBox x:Name="txtNombre" Margin="10,0,0,0" Width="250" HorizontalAlignment="Left" TabIndex="0"/>
            <Label Content="_Direccion" Margin="10,0,0,0" Target="{Binding ElementName=txtDireccion}"/>
            <TextBox x:Name="txtDireccion" Margin="10,0,0,0" Width="250" HorizontalAlignment="Left" TabIndex="2"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="_Apellido" Margin="10,0,0,0" Target="{Binding ElementName=txtApellido}"/>
            <TextBox Name="txtApellido"  Margin="10,0,0,0" Width="250" HorizontalAlignment="Left" TabIndex="1"/>
            <Label Content="Codigo _Postal" Margin="10,0,0,0" Target="{Binding ElementName=txtCP}"/>
            <TextBox x:Name="txtCP" Margin="10,0,0,0" Width="250" HorizontalAlignment="Left" TabIndex="3"/>
        </StackPanel>
    </Grid>
</Window>
