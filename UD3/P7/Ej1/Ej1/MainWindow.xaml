<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Orientation="Vertical">
            <Button Content="MessageBox simple" Click="Simple_Click" Height="25" Margin="6"/>
            <Button Content="MessageBox con titulo" Click="Titulo_Click" Height="25" Margin="6"/>
            <Button Content="MessageBox con botones" Click="Boton_Click" Height="25" Margin="6"/>
            <Button Content="MessageBox con respuesta" Click="Respuesta_Click" Height="25" Margin="6"/>
            <Button Content="MessageBox con icono" Click="Icono_Click" Height="25" Margin="6"/>
            <Button Content="MessageBox con opcion por defecto" Click="Marca_Click" Height="25" Margin="6"/>
        </StackPanel>
    </Grid>
</Window>
