<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="590">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ListBox Name="lstRango" SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Texto}" VerticalAlignment="Center" Width="270"/>
                        <ProgressBar Value="{Binding Valor}" Width="150" Height="20" Margin="4 0" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>            
        </ListBox>
        
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="ListBox selection" FontWeight="Bold" Margin="10"/>
            <Button Content="Show Selected" Name="btnShow" Click="showClick" Margin="6,3"/>
            <Button Content="Select last" Name="btnLast" Click="lastClick" Margin="6,3"/>
            <Button Content="Select next" Name="btnNext" Click="nextClick" Margin="6,3"/>
            <Button Content="Select C#" Name="btnC" Click="cClick" Margin="6,3"/>
            <Button Content="Select all" Name="btnAll" Click="allClick" Margin="6,3"/>
        </StackPanel>        
    </Grid>    
    
</Window>
    
