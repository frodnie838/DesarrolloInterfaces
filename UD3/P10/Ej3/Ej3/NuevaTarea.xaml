<Window x:Class="Ej3.NuevaTarea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej3"
        mc:Ignorable="d"
        Title="NuevaTarea" Height="250" Width="400">
    <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Nueva Tarea " Margin="0,10" FontWeight="Bold" HorizontalAlignment="Center" FontSize="24"/>
        <TextBox Name="tarea" Width="300" HorizontalAlignment="Left" Margin="0,10"/>
        <Button Name="btnEnviar" Content="Enviar" Click="EnviarTarea" Width="80" HorizontalAlignment="Center" Margin="0,10"/>        
    </StackPanel>
</Window>
