<Window x:Class="Ej4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>            
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="ADMINISTRACIÓN" FontWeight="Bold" FontSize="12" Margin="10" HorizontalAlignment="Center"/>
            <Button Name="btnAlta" Click="Alta" Content="Alta Empleado" Margin="10" Width="150"/>
            <Button Name="btnHoraTotales" Click="HorasTotales" Content="Horas extras totales" Margin="10" Width="150"/>
            <Button Name="btnInforme" Click="Informe" Content="Informe completo" Margin="10" Width="150"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center">
            <TextBlock Text="EMPLEADOS" FontWeight="Bold" FontSize="12" Margin="10" HorizontalAlignment="Center"/>
            <Button Name="btnHoraExt" Click="HoraExt" Content="Insertar hora extra" Margin="10" Width="150"/>
        </StackPanel>

        <TextBox Name="MostrarT" IsReadOnly="True" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"/>

    </Grid>
</Window>
