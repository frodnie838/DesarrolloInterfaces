<Window x:Class="Ej2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej2"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Introduce la dimesión de la matriz:" Margin="10"/>
            <TextBox Name="dimension" Width="20" Margin="10" MaxLength="2" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Inicializa matriz" Click="Inicializa" Width="100" Height="20"/>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <Button Content="Imprime matriz" Click="ImpMatriz" Width="110" Margin="10"/>
                <Button Content="Imprime traspuesta" Click="ImpTras" Width="110" Margin="10"/>
            </StackPanel>
        </Grid>
        <TextBox Name="resultado" Width="750" Height="300"/>
    </StackPanel>
</Window>
