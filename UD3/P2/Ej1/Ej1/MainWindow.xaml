<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Grid>
        <TextBlock Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">
            <Span Foreground="Red"> Este texto es rojo y puede ocupar varias líneas si el ancho es limitado </Span>
            <LineBreak/>
            <Span Foreground="Blue">Segunda línea en azul, con una</Span>
            <Bold Foreground="Blue">palabra en negrita</Bold>
            <LineBreak/>
            <Span Foreground="Green">Tercera línea en verde</Span>
            <Span Foreground="Orange"> para mostrar </Span>
            <Span Foreground="Yellow">varios colores</Span>
        </TextBlock>

    </Grid>
</Window>
