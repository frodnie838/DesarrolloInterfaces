<Window x:Class="Ej8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label FontWeight="Bold">Módulos que pienso aprobar</Label>
            <StackPanel Margin="20">
                <CheckBox IsThreeState="True" Name="Caja" Checked="Seleccionar" Unchecked="Seleccionar">Todos los módulos</CheckBox>
                <StackPanel Margin="30">

                    <CheckBox Name="di" Checked="Sl" Unchecked="Sl">Desarrollo de Interfaces</CheckBox>
                    <CheckBox Name="sge" Checked="Sl" Unchecked="Sl">Sistemas de gestion empresarial</CheckBox>
                    <CheckBox Name="ad" Checked="Sl" Unchecked="Sl">Acceso a Datos</CheckBox>

                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
