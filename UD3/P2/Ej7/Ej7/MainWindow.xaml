<Window x:Class="Ej7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="tBox" Width="250" HorizontalAlignment="Center" Margin="0,0,0,10" />
            <Button Padding="10" HorizontalAlignment="Center" Click="BClick">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                        <Image Source="/alerta.png"  Width="27" Height="24" Cursor="Hand" MouseLeftButtonUp="ImagenClick" />
                    </Viewbox>
                    <TextBlock VerticalAlignment="Center">Botón</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
