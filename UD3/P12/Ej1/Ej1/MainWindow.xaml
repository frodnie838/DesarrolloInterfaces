<Window x:Class="Ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl TabStripPlacement="Left" SelectionChanged="TabCambio" Name="TabMain">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentPresenter Content="{TemplateBinding Content}">
                                    <ContentPresenter.LayoutTransform>
                                        <RotateTransform Angle="270"></RotateTransform>
                                    </ContentPresenter.LayoutTransform>
                                </ContentPresenter>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/Number-1-icon_34782.png" Margin="10,0" Height="10"/>
                        <TextBlock Text="Numeros"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Numero 1:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Right" Margin="0,50"/>
                    <TextBox x:Name="tb1" Width="200" Height="20" HorizontalAlignment="Left" Margin="10" Grid.Column="1" Grid.Row="0"/>

                    <Label Content="Numero 2:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Right"/>
                    <TextBox x:Name="tb2" Width="200" Height="20" HorizontalAlignment="Left" Margin="10" Grid.Column="1" Grid.Row="1"/>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">                        
                        <Image Source="/images/multiplicationsign_80855.png" Margin="10,0" Height="10"/>
                        <TextBlock Text="Multiplicacion"/>
                    </StackPanel>
                </TabItem.Header>
                <TextBox IsReadOnly="True" Name="tbResult" FontWeight="Bold" TextAlignment="Center" FontSize="32"/>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/images_canon_camera_1746.png" Margin="10,0" Height="10"/>
                        <TextBlock Text="Imagenes"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Imagenes" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="20"/>
                    <Image Source="/images/Number-1-icon_34782.png" Grid.Row="1" Grid.Column="0"/>
                    <Image Source="/images/images_canon_camera_1746.png" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>
