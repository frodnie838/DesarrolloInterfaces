<Window x:Class="Ej3.Insertar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej3"
        mc:Ignorable="d"
        Title="Insertar" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Insertar Datos" FontWeight="Bold" FontSize="24" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10"/>

        <Label Content="Nombre:" Grid.Row="1" Grid.Column="0" Margin="10,0" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" Width="200" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <Label Content="Apellido:" Grid.Row="2" Grid.Column="0" Margin="10,0" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSurname" Width="200" Grid.Row="2" Grid.Column="1" Margin="10"/>

        <Label Content="Edad:" Grid.Row="3" Grid.Column="0" Margin="10,0" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAge" Width="200" Grid.Row="3" Grid.Column="1" Margin="10"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button x:Name="btnguardar" Click="GuardarD" Content="Guardar" Margin="10" Width="100"/>
            <Button x:Name="btnCancelar" Click="CancelarD" Content="Cancelar" Margin="10" Width="100"/>    
        </StackPanel>
        

    </Grid>
</Window>
