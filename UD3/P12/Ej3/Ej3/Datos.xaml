<Window x:Class="Ej3.Datos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej3"
        mc:Ignorable="d"
        Title="Datos" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgLista" ItemsSource="{Binding ListaUsuarios}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding idusers}" Width="80"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding name}" Width="150"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding surname}" Width="150"/>
                <DataGridTextColumn Header="Edad" Binding="{Binding age}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
