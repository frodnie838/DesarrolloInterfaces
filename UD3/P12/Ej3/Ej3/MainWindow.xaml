<Window x:Class="Ej3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BD" Content="Conexión" Width="80" Margin="20" Click="BBDD"/>
            <Button x:Name="Datos" Content="Mostrar Datos" Width="80" Margin="20" Click="MostrarD"/>
            <Button x:Name="Insertar" Content="Insertar Datos" Width="80" Margin="20" Click="InsertarD"/>
        </StackPanel>
        <TextBlock Name="tbResult" FontWeight="Bold" FontSize="16" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" TextWrapping="Wrap" Margin="10"/>
    </Grid>
</Window>
