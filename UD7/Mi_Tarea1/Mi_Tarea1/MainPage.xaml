<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mi_Tarea1.MainPage"             
             Background="DarkGray"
             NavigationPage.HasNavigationBar="False">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" Padding="10" BackgroundColor="Gray" BorderColor="Transparent">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.ColumnSpan="3" Text="TOTAL POR PERSONA" HorizontalTextAlignment="Center" TextColor="Cyan" FontAttributes="Bold"/>
                <Label x:Name="lblTotal" Grid.Column="0" Grid.Row="1" VerticalOptions="CenterAndExpand" Text="$0.00" HorizontalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontSize="35"/>

                <BoxView Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Color="Azure" Margin="0,10,0,0" WidthRequest="1" HeightRequest="150"/>

                <VerticalStackLayout Grid.Row="1" Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center" >
                    <Label Text="SUBTOTAL" TextColor="White"/>
                    <Label x:Name="lblSubtotal" Text="$0.00" TextColor="White" FontAttributes="Bold"/>
                    <Label Margin="0,10,0,0" Text="PROPINA" TextColor="White"/>
                    <Label x:Name="lblPropinaPorPersona" Text="$0.00" TextColor="White" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.5*"/>
                <ColumnDefinition Width="6.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="2.5*"/>
            </Grid.RowDefinitions>

            <Label VerticalOptions="Center" Text="Importe Cuenta:$" TextColor="White"/>
            <Entry Grid.Row="0" Grid.Column="1" x:Name="txtCuenta" VerticalOptions="Center" Text="0.0" TextColor="White" BackgroundColor="Gray" Keyboard="Numeric" Completed="TxtCuenta_Completed"/>

            <Label Grid.Row="1" Grid.Column="0" VerticalOptions="Center" Text="Elige la propina" TextColor="White"/>
            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" HeightRequest="70" Spacing="10" HorizontalOptions="CenterAndExpand">
                <Button Text="10%" WidthRequest="70" Clicked="Button_Clicked"/>
                <Button Text="15%" WidthRequest="70" Clicked="Button_Clicked"/>
                <Button Text="20%" WidthRequest="70" Clicked="Button_Clicked"/>
            </HorizontalStackLayout>

            <Label Grid.Row="2" Grid.Column="0" x:Name="lblPropina" VerticalOptions="Center" Text="Propina: 0%" TextColor="White"/>
            <Slider Grid.Row="2" Grid.Column="1" x:Name="sldPropina" Minimum="0" Maximum="50" ValueChanged="SldPropina_ValueChanged"/>

            <Label Grid.Row="3" Grid.Column="0" VerticalOptions="Center" Text="Divide el total" TextColor="White"/>
            <HorizontalStackLayout Grid.Row="3" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                <Button x:Name="btnMenos" Text="-" WidthRequest="70" Clicked="BtnMenos_Clicked"/>
                <Label x:Name="lblPersonas" Margin="-5,0,-5,0" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="50" WidthRequest="100" Text="1" FontSize="25" TextColor="White" BackgroundColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Button x:Name="btnMas" Text="+" WidthRequest="70" Clicked="BtnMas_Clicked"/>
            </HorizontalStackLayout>

        </Grid>
    </Grid>
    

</ContentPage>
